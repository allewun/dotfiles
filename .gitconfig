[user]
  name  = Allen Wu
  email = # email adress #

[merge]
  tool = p4merge

[mergetool]
  prompt = false

[color]
  ui     = true
  diff   = auto
  status = auto

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red
  new  = green

[color "status"]
  added   = green
  changed = cyan

[alias]
  s  = status
  co = checkout
  d  = difftool
  c  = commit
  b  = branch

  # concise log, concise log + graph, concise log with modified files
  l = log --pretty=format:'%C(red)%h%Creset %C(yellow)%d%Creset %s %C(cyan)(%an, %ad)%Creset' --date=short
  lg = log --pretty=format:'%C(red)%h%Creset %C(yellow)%d%Creset %s %C(cyan)(%an, %ad)%Creset' --date=short --graph
  lf = log --pretty=format:'%C(red)%h%Creset %C(yellow)%d%Creset %s %C(cyan)(%an, %ad)%Creset' --date=short --stat

  this = !git init && git add . && git commit -m \"Initial commit\"
  email = config user.email

[core]
  excludesfile = /Users/allen/.gitignore
